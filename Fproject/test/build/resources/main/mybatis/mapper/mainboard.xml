<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper  namespace="com.example.test.repository.MainBoardDAO">
    <select id="getMainboard" resultType="com.example.test.domain.MainBoardDTO" parameterType="int">
        select m_title,region from main board where course_id = {0}
    </select>
    <insert id="insertWrite" parameterType="Map">
        insert into main_board (title,region,user_id,course_id) values(#{mdto.title},#{mdto.region},#{user_id},#{mdto.course_id})
    </insert>
</mapper>

